<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:textSize="@dimen/textSize"
                    android:id="@+id/nameT"
                    android:onClick="process"
                    android:textColor="@android:color/background_light"
                    android:text="@string/name1"
                    android:background="@color/colorName"
                    style="@style/nameBtn"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/addressT"
                    android:background="@color/colorAddress"
                    android:padding="@dimen/paddingBtn"
                    android:text="@string/add1"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/textSize"
                    style="@style/nameBtn"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/phoneT"
                    android:background="@color/colorPhone"
                    android:text="@string/phone1"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/textSize"
                    style="@style/nameBtn"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/emailT"
                    android:background="@color/colorEmail"
                    android:text="@string/email1"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/textSize"
                    style="@style/nameBtn"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>